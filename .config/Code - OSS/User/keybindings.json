// Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+shift+M",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "problemFocus"
  },
  {
    "key": "ctrl+shift+M",
    "command": "workbench.action.problems.focus",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+p",
    "command": "cursorUp",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+n",
    "command": "cursorDown",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+f",
    "command": "cursorRight",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+b",
    "command": "cursorLeft",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+a",
    "command": "cursorHome",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+e",
    "command": "cursorEnd",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+d",
    "command": "deleteRight",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+h",
    "command": "deleteLeft",
    "when": "terminalFocus"
  }
]
